<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <!--header dialog-->
    <LinearLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialog_header"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing=".1"
            android:text="Add The Moto"
            android:textColor="@color/dark"
            android:textSize="20dp" />

    </LinearLayout>

    <!--main dialog-->
    <RelativeLayout
        android:id="@+id/field"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header"
        android:background="@drawable/dialog_main">

        <!--image-->
        <ImageView
            android:id="@+id/image"
            android:layout_width="129dp"
            android:layout_height="85dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/moto" />


        <!--list 1-->
        <LinearLayout
            android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:orientation="vertical">

            <!--name-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/name"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                app:hintTextColor="@color/yellow">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Name:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--price-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/price"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Price:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--weight-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/weight"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Weight:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--speed-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/speed"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Speed:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--company-->
            <com.google.android.material.textfield.TextInputLayout
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:hint="The Company">

                <AutoCompleteTextView
                    android:id="@+id/autoText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!--list 2-->
        <LinearLayout
            android:id="@+id/lits2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:orientation="vertical">

            <!--engine-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/engine"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Engine:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--fuel-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/fuel"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Fuel Capacity:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <!--volume-->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/volume"
                android:layout_width="160dp"
                android:layout_height="wrap_content">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:hint="Volume:"
                    android:letterSpacing=".1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />

            </com.google.android.material.textfield.TextInputLayout>

            <!--quantity-->
            <LinearLayout
                android:id="@+id/quantity"
                android:layout_width="165dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing=".1"
                    android:text="Quantity:"
                    android:textColor="@color/dark"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/minus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/minus" />

                <TextView
                    android:id="@+id/quantityValue"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:fontFamily="@font/poppins_regular"
                    android:text="1"
                    android:textColor="@color/dark"
                    android:textSize="15sp" />

                <ImageView
                    android:id="@+id/plus"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/plus" />
            </LinearLayout>


        </LinearLayout>

        <!--button-->
        <LinearLayout
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list1"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/background_btn_add_invoice"
                android:fontFamily="@font/poppins_medium"
                android:letterSpacing=".1"
                android:text="Cancel"
                android:textColor="@color/dark"
                android:textSize="20sp" />

            <Button
                android:id="@+id/btnAdd"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:background="@drawable/btn_buy"
                android:fontFamily="@font/poppins_bold"
                android:letterSpacing=".1"
                android:text="Add"
                android:textColor="@color/dark"
                android:textSize="20sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>