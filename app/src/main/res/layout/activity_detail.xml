<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.DetailActivity">

    <ImageView
        android:id="@+id/backgroundDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/forty_eight_detail"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/cardDetail"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/card_detail"
        android:padding="20dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Name: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aName"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Engine: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aEngine"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Set Height: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aSetHeight"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Fuel Capacity: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Weight: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aWeight"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Max Speed: "
                android:textColor="@color/blue1"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/list1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="Pan America"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="Evelution Max 1250"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/setHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="850 mm"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="21,2 l"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="242 kg"
                android:textColor="#fff"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="250 km/h"
                android:textColor="#fff"
                android:textSize="14sp" />
        </LinearLayout>


        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing=".1"
            android:text="28.999$"
            android:textColor="#ffff"
            android:textSize="35sp" />

        <Button
            android:id="@+id/btnBuy"
            android:layout_width="120dp"
            android:layout_height="53dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/price"
            android:background="@drawable/btn_buy"
            android:fontFamily="@font/poppins_bold"
            android:text="Buy"
            android:textAllCaps="false"
            android:textColor="@color/blueDark"
            android:textSize="30sp" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>