<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark"
    tools:context=".activities.DetailActivity">

    <!--card product-->
    <RelativeLayout
        android:id="@+id/cardProduct"
        android:layout_width="match_parent"
        android:layout_height="422dp"
        android:background="@drawable/background"
        android:paddingTop="165dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/image"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_centerHorizontal="true"
            android:scaleType="fitCenter"
            android:src="@drawable/rebel" />

    </RelativeLayout>

    <!--card detail-->
    <RelativeLayout
        android:id="@+id/cardDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/cardProduct"
        android:padding="20dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:id="@+id/list1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Name: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aName"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Engine: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aEngine"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Set Height: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aSetHeight"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Fuel Capacity: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fuel"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Weight: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/aWeight"
                android:fontFamily="@font/poppins_semibold"
                android:letterSpacing=".1"
                android:text="Max Speed: "
                android:textColor="@color/yellow"
                android:textSize="14sp" />
        </LinearLayout>

        <!--text detail-->
        <LinearLayout
            android:id="@+id/list2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/list1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="Pan America"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/engine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="Evelution Max 1250"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/setHeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="850 mm"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/fuel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="21,2 l"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/weight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="242 kg"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:letterSpacing=".1"
                android:text="250 km/h"
                android:textColor="@color/white"
                android:textSize="14sp" />
        </LinearLayout>


        <!--price-->
        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="70dp"
            android:fontFamily="@font/poppins_bold"
            android:letterSpacing=".1"
            android:text="28.999$"
            android:textColor="@color/white"
            android:textSize="35sp" />

        <!--buy button-->
        <Button
            android:id="@+id/btnBuy"
            android:layout_width="170dp"
            android:layout_height="53dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/btn_buy"
            android:fontFamily="@font/poppins_bold"
            android:text="Buy"
            android:textAllCaps="false"
            android:textColor="@color/dark"
            android:textSize="30sp" />

    </RelativeLayout>
</RelativeLayout>